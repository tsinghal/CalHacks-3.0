<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <TextView
    android:text="Type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView9"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:layout_marginTop="17dp"
    android:layout_alignParentTop="true"
    android:layout_alignLeft="@+id/textView8"
    android:layout_alignStart="@+id/textView8" />

    <Spinner
    android:layout_height="wrap_content"
    android:id="@+id/endTime" android:entries="@array/time_array"
    android:layout_width="90dp"
    android:layout_alignBaseline="@+id/startTime"
    android:layout_alignBottom="@+id/startTime"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="15dp"
    android:layout_marginEnd="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/description"
        android:hint="Give a short description"
        android:layout_below="@+id/startTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/startTime"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="26dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/locationValue"
        android:entries="@array/location_array"
        android:layout_width="180dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/typeValue"
        android:layout_alignRight="@+id/endTime"
        android:layout_alignEnd="@+id/endTime" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/typeValue"
        android:entries="@array/type_array"
        android:layout_width="180dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/locationValue"
        android:layout_alignStart="@+id/locationValue" />

    <TextView
    android:text="End"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView12"
        android:layout_marginLeft="25dp"
    android:layout_marginStart="25dp"
        android:layout_above="@+id/endTime"
        android:layout_toRightOf="@+id/startTime"
        android:layout_toEndOf="@+id/startTime" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="35dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/locationValue"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_above="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_above="@+id/startTime"
        android:layout_alignLeft="@+id/startTime"
        android:layout_alignStart="@+id/startTime" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/startTime"
        android:entries="@array/time_array"
        android:layout_width="90dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toLeftOf="@+id/endTime"
        android:layout_toStartOf="@+id/endTime" />
</RelativeLayout>
