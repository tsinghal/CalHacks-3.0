<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_physical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="#f64c73"
        />

    <Button
        android:text="Post my Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/postButton"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/bg_screen1"

        android:id="@+id/card1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_height="100dp"
                android:layout_width="100dp" />

            <TextView
                android:text="Hi! Come join me for a jog."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/textView13"
                android:layout_alignEnd="@+id/textView13" />

            <TextView
                android:text="Chugg Huston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp"
                android:layout_alignTop="@+id/img1"
                android:layout_toRightOf="@+id/img1"
                android:layout_toEndOf="@+id/img1" />

            <Button
                android:text="Join"
                android:layout_height="40dp"
                android:id="@+id/button2"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardBackgroundColor="@color/bg_screen1"
        android:layout_centerVertical="false"
        android:layout_below="@id/card1"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_height="100dp"
                android:layout_width="120dp" />

            <TextView
                android:text="Looking for a workout buddy!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="28dp"
                android:layout_marginEnd="28dp" />

            <TextView
                android:text="Bill Hunter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_alignTop="@+id/img2"
                android:layout_alignRight="@+id/textView16"
                android:layout_alignEnd="@+id/textView16"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp" />

            <Button
                android:text="Join"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/button3"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
